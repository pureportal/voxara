{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Dragabyte",
  "identifier": "com.dragabyte.app",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "capabilities": ["default"]
    },
    "windows": [
      {
        "title": "Dragabyte",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["deb", "rpm", "msi", "nsis"],
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "perMachine"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://github.com/pureportal/dragabyte/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQxRTQxNDQ0MjI5OUUwNEUKUldSTzRKa2lSQlRrMFpJRzMwTHNqbENzTTdxN3QyU0JUUXkrQjQyMzN0UlNIWkJSVUtsZ0hsSWUK"
    }
  }
}
